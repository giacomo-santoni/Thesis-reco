      <file name="./codedApertureMask.gdml"/>
      <rotation name="Rotation_0" unit="deg" x="0" y="0" z="0"/>
      <position name="Position_0" unit="mm" x="0.000" y="0.000" z="21.550 / 2 - 0.100 / 2"/>
    </physvol>
    <physvol name="cameraAssembly_photoDetector">
      <file name="./photoDetector.gdml"/>
      <position name="Position_1" unit="mm" x="1.600" y="1.600" z="- 21.550 / 2 + 1.000 / 2 + 1.000"/>
