    <physvol name="cameraAssembly_body">
      <file name="./cameraBody.gdml"/>
      <position name="Position_2" unit="mm" x="0.000" y="0.000" z="0.000"/>
    </physvol>
    <auxiliary auxtype="Camera" auxvalue=""/>
  </volume>